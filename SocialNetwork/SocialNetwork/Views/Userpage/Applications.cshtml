<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.FirstName + " " + item.LastName, "Id", new { id = item.Id })
            </td>
            <td>
                <a href="/Userpage/Confirmfriendapplications?id=@item.Id" class="btn btn-success">Принять заявку</a>
                <a href="/Userpage/Deletefriendapplications?id=@item.Id" class="btn btn-light">Отменить заявку</a>
            </td>
        </tr>
    }

</table>
