
@model IEnumerable<SocialNetwork.Models.ApplicationUser>

@{
    ViewBag.Title = "Applications";
}

<table class="table">
    <tr>
        <td><h2>@Html.ActionLink("Друзья", "Friends")</h2></td>
        <td><h2><u>@Html.ActionLink("Заявки", "Applications")</u></h2></td>
    </tr>
</table>

<form action="Applications" method="post" class="navbar-form navbar-left" role="search">
    <div class="form-group">
        <input type="text" name="Filter" class="form-control" placeholder="Найти">
    </div>
    <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-search"></span>
    </button>
</form>


